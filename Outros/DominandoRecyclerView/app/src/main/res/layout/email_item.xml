<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/car_view_bg"
    tools:showIn="@layout/activity_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/txt_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:background="@drawable/circle"
            android:gravity="center"
            android:text="F"/>

        <TextView
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/txt_icon"
            android:layout_alignTop="@id/txt_icon"
            android:textSize="18sp"
            android:layout_toStartOf="@id/txt_date"
            android:textColor="@color/darkergray"
            android:text="Facebook"/>

        <TextView
            android:id="@+id/subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:layout_below="@id/user"
            android:layout_alignStart="@id/user"
            android:textSize="16sp"
            android:textColor="@color/darkergray"
            android:layout_marginEnd="24dp"
            android:text="Facebook Facebook Facebook Facebook Facebook Facebook Facebook Facebook Facebook Facebook" />

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkergray"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:text="20 mai"/>
        
        <ImageView
            android:id="@+id/img_star"
            android:src="@drawable/baseline_star_border_24"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>